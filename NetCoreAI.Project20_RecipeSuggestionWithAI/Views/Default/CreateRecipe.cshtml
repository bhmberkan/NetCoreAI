
@{
    Layout = null;
}

<!DOCTYPE html>

﻿
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Yemek Tarifi Öner</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link href="~/css/style.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <h2> 🍽 AI Tarif Önerici</h2>
        <p class="text-center">Elindeki malzemeleri gir, yapabileceğin yemekleri öğren!</p>

        <form method="post">
            <label for="ingredients" class="form-label">Malzemelerinizi Giriniz(Virgülle Ayırın):</label>
            <input type="text" id="ingredients" name="ingredients" class="form-control" placeholder="Örn: Domates, Peynir, Makarna" required/>
            <br />
            <button type="submit" class="btn btn-primary w-100">  Tarif Öner 🥣 </button>
        </form> 

        <div class="result-box">
            <h4> 🥘 AI Önerisi :</h4>
            <p>@ViewBag.recipe</p>
        </div>
    </div>



    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

